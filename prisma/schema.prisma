generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  name         String?
  email        String    @unique
  password     String
  phone        String 
  profileImage String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  products     Product[]
}

enum ProductStatus {
  ANUNCIADO
  VENDIDO
  CANCELADO
}

enum ProductCategory {
  BRINQUEDO
  MOVEL
  PAPELARIA
  SAUDE_E_BELEZA
  UTENSILIO
  VESTIARIO
}

model Product {
  id          String         @id @default(uuid())
  title       String
  description String
  price       Decimal        @db.Decimal(10,2)
  image       String
  category    ProductCategory
  status      ProductStatus  @default(ANUNCIADO)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  userId      String
  user        User           @relation(fields: [userId], references: [id])

  @@index([status])
}
